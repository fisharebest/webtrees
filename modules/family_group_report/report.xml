					<!-- print the wife's notes -->
					<PGVRif condition="$notes==1">
						<PGVRRepeatTag tag="NOTE">
							<PGVRTextBox bgcolor="$factbox_bgcolor" border="1" left="15" width="$width1" newline="1">
								<PGVRText color="$tcolor" style="name"><PGVRvar var="i18n::translate('Note')" />  </PGVRText>
