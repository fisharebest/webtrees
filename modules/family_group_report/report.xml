								</PGVRif>
								<PGVRText color="$tcolor" style="text">
									<PGVRGedcomValue tag="@fact:PLAC" /> <PGVRGedcomValue tag="@fact:TEMP" />
								</PGVRText>
							</PGVRTextBox>
						</PGVRif>
					</PGVRFacts>

					<!-- print the death and burial with blanks on -->
