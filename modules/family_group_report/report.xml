							</PGVRTextBox>
						</PGVRRepeatTag>
					</PGVRif>
					<PGVRTextBox height="$sheight" newline="1"/>
				</PGVRGedcom>
				<!-- end of main wife -->

				<!-- print the children box in gray or color -->
				<PGVRTextBox border="1" width="$width" newline="1" bgcolor="$sectionbox_bgcolor">
					<PGVRText color="$tcolor" style="text">
						<PGVRvar var="i18n::translate('Children')" />  <PGVRvar var="i18n::translate('List each child in order of birth.')" />
					</PGVRText>
				</PGVRTextBox>

				<!-- find and print all of the children in the family -->
				<PGVRRepeatTag tag="CHIL">
					<PGVRGedcom id="@CHIL">
						<!-- Print the male child's name -->
						<PGVRif condition="@SEX=='M'">
							<PGVRTextBox bgcolor="$malebox_bgcolor" border="1" left="15" newline="1" width="$width1">
								<PGVRText color="$tcolor" style="text"><PGVRvar var="i18n::translate('Son')"/>  </PGVRText>
								<PGVRText color="$tcolor" style="name"><PGVRGetPersonName id="" /> </PGVRText>
								<PGVRif condition="$sources==1">
									<PGVRRepeatTag tag="SOUR">
										<PGVRFootnote>
											<PGVRGedcom id="@SOUR">
												<PGVRGedcomValue tag="TITL" />
											</PGVRGedcom>
											<PGVRif condition="@PAGE!=''">: </PGVRif>
											<PGVRGedcomValue tag="SOUR:PAGE"/> <PGVRGedcomValue tag="SOUR:DATA:TEXT"/>
										</PGVRFootnote>
										<PGVRSetVar name="source_exist" value="1"/>
									</PGVRRepeatTag>
								</PGVRif>
							</PGVRTextBox>
						</PGVRif>
						<!-- Print the female child's name -->
						<PGVRif condition="@SEX=='F'">
							<PGVRTextBox bgcolor="$femalebox_bgcolor" border="1" left="15" newline="1" width="$width1">
								<PGVRText color="$tcolor" style="text"><PGVRvar var="i18n::translate('Daughter')"/>  </PGVRText>
								<PGVRText color="$tcolor" style="name"><PGVRGetPersonName id="" /> </PGVRText>
								<PGVRif condition="$sources==1">
									<PGVRRepeatTag tag="SOUR">
										<PGVRFootnote>
											<PGVRGedcom id="@SOUR">
												<PGVRGedcomValue tag="TITL" />
											</PGVRGedcom>
											<PGVRif condition="@PAGE!=''">: </PGVRif>
											<PGVRGedcomValue tag="SOUR:PAGE"/> <PGVRGedcomValue tag="SOUR:DATA:TEXT"/>
										</PGVRFootnote>
										<PGVRSetVar name="source_exist" value="1"/>
									</PGVRRepeatTag>
								</PGVRif>
							</PGVRTextBox>
						</PGVRif>
						<!-- Print the unknown gender child's name -->
						<PGVRif condition="(@SEX=='U') or (@SEX=='')">
							<PGVRTextBox bgcolor="$unknowngenderbox_bgcolor" border="1" left="15" newline="1" width="$width1">
								<PGVRText color="$tcolor" style="text"><PGVRvar var="i18n::translate('Gender')"/> <PGVRvar var="i18n::translate('Unknown')"/>  </PGVRText>
								<PGVRText color="$tcolor" style="name"><PGVRGetPersonName id="" /> </PGVRText>
								<PGVRif condition="$sources==1">
									<PGVRRepeatTag tag="SOUR">
										<PGVRFootnote>
											<PGVRGedcom id="@SOUR">
												<PGVRGedcomValue tag="TITL" />
											</PGVRGedcom>
											<PGVRif condition="@PAGE!=''">: </PGVRif>
											<PGVRGedcomValue tag="SOUR:PAGE"/> <PGVRGedcomValue tag="SOUR:DATA:TEXT"/>
										</PGVRFootnote>
										<PGVRSetVar name="source_exist" value="1"/>
									</PGVRRepeatTag>
								</PGVRif>
							</PGVRTextBox>
						</PGVRif>

						<!-- print the birth and christenting when blanks are on -->
						<PGVRif condition="$blanks==1">
							<PGVRTextBox bgcolor="$factbox_bgcolor" border="1" left="15" width="$dwidth">
								<PGVRText color="$tcolor" style="fact"><PGVRvar var="i18n::translate('Birth')" />  </PGVRText>
								<PGVRText color="$tcolor" style="text"><PGVRGedcomValue tag="BIRT:DATE" /> </PGVRText>
								<PGVRif condition="$sources==1">
									<PGVRRepeatTag tag="BIRT:SOUR">
										<PGVRFootnote>
											<PGVRGedcom id="@SOUR">
												<PGVRGedcomValue tag="TITL" />
											</PGVRGedcom>
											<PGVRif condition="@PAGE!=''">: </PGVRif>
											<PGVRGedcomValue tag="SOUR:PAGE"/> <PGVRGedcomValue tag="SOUR:DATA:TEXT"/>
										</PGVRFootnote>
										<PGVRSetVar name="source_exist" value="1"/>
									</PGVRRepeatTag>
								</PGVRif>
							</PGVRTextBox>
							<PGVRTextBox bgcolor="$factbox_bgcolor" border="1" width="$width2" newline="1">
								<PGVRif condition="$showplace==1">
									<PGVRText color="$tcolor" style="fact"><PGVRvar var="i18n::translate('Place')" />  </PGVRText>
								</PGVRif>
								<PGVRText color="$tcolor" style="text"><PGVRGedcomValue tag="BIRT:PLAC" /></PGVRText>
							</PGVRTextBox>

							<PGVRTextBox bgcolor="$factbox_bgcolor" border="1" left="15" width="$dwidth">
								<PGVRText color="$tcolor" style="fact"><PGVRvar var="i18n::translate('Christening')" />  </PGVRText>
								<PGVRText color="$tcolor" style="text"><PGVRGedcomValue tag="CHR:DATE" /> </PGVRText>
								<PGVRif condition="$sources==1">
									<PGVRRepeatTag tag="CHR:SOUR">
										<PGVRFootnote>
											<PGVRGedcom id="@SOUR">
												<PGVRGedcomValue tag="TITL" />
											</PGVRGedcom>
											<PGVRif condition="@PAGE!=''">: </PGVRif>
											<PGVRGedcomValue tag="SOUR:PAGE"/> <PGVRGedcomValue tag="SOUR:DATA:TEXT"/>
										</PGVRFootnote>
										<PGVRSetVar name="source_exist" value="1"/>
									</PGVRRepeatTag>
								</PGVRif>
							</PGVRTextBox>
							<PGVRTextBox bgcolor="$factbox_bgcolor" border="1" width="$width2" newline="1">
								<PGVRif condition="$showplace==1">
									<PGVRText color="$tcolor" style="fact"><PGVRvar var="i18n::translate('Place')" />  </PGVRText>
								</PGVRif>
								<PGVRText color="$tcolor" style="text"><PGVRGedcomValue tag="CHR:PLAC" /></PGVRText>
							</PGVRTextBox>
						</PGVRif>

						<!-- print the rest of the facts -->
						<PGVRFacts ignore="$ignore">
							<PGVRTextBox bgcolor="$factbox_bgcolor" border="1" left="15" width="$dwidth">
								<PGVRText color="$tcolor" style="fact"><PGVRvar var="i18n::translate('@fact')" />  </PGVRText>
								<PGVRText color="$tcolor" style="text"><PGVRGedcomValue tag="@fact:DATE" /> </PGVRText>
								<PGVRif condition="$sources==1">
									<PGVRRepeatTag tag="@fact:SOUR">
										<PGVRFootnote>
											<PGVRGedcom id="@SOUR">
												<PGVRGedcomValue tag="TITL" />
											</PGVRGedcom>
											<PGVRif condition="@PAGE!=''">: </PGVRif>
											<PGVRGedcomValue tag="SOUR:PAGE"/> <PGVRGedcomValue tag="SOUR:DATA:TEXT"/>
										</PGVRFootnote>
										<PGVRSetVar name="source_exist" value="1"/>
									</PGVRRepeatTag>
								</PGVRif>
							</PGVRTextBox>
							<PGVRif condition="@desc!=''">
								<PGVRTextBox bgcolor="$factbox_bgcolor" border="1" width="$width2" newline="1">
									<PGVRif condition="@_PGVS!=''">
										<PGVRText color="$tcolor" style="name"><PGVRGetPersonName id="@_PGVS" />  </PGVRText>
									</PGVRif>
									<PGVRText color="$tcolor" style="text">
										<PGVRGedcomValue tag="@desc" /> <PGVRGedcomValue tag="@fact:PLAC" />
									</PGVRText>
								</PGVRTextBox>
							</PGVRif>
							<PGVRif condition="@desc==''">
								<PGVRTextBox bgcolor="$factbox_bgcolor" border="1" width="$width2" newline="1">
									<PGVRif condition="@_PGVS!=''">
										<PGVRText color="$tcolor" style="name"><PGVRGetPersonName id="@_PGVS" />  </PGVRText>
									</PGVRif>
									<PGVRif condition="$showplace==1">
										<PGVRText color="$tcolor" style="fact"><PGVRvar var="i18n::translate('Place')" />  </PGVRText>
									</PGVRif>
									<PGVRText color="$tcolor" style="text">
										<PGVRGedcomValue tag="@fact:PLAC" /> <PGVRGedcomValue tag="@fact:TEMP" />
									</PGVRText>
								</PGVRTextBox>
							</PGVRif>
						</PGVRFacts>

						<!-- print the death and burial with blanks on -->
						<PGVRif condition="$blanks==1">
							<PGVRTextBox bgcolor="$factbox_bgcolor" border="1" left="15" width="$dwidth">
								<PGVRText color="$tcolor" style="fact"><PGVRvar var="i18n::translate('Death')" />  </PGVRText>
								<PGVRText color="$tcolor" style="text"><PGVRGedcomValue tag="DEAT:DATE" /> </PGVRText>
								<PGVRif condition="$sources==1">
									<PGVRRepeatTag tag="DEAT:SOUR">
										<PGVRFootnote>
											<PGVRGedcom id="@SOUR">
												<PGVRGedcomValue tag="TITL" />
											</PGVRGedcom>
											<PGVRif condition="@PAGE!=''">: </PGVRif>
											<PGVRGedcomValue tag="SOUR:PAGE"/> <PGVRGedcomValue tag="SOUR:DATA:TEXT"/>
										</PGVRFootnote>
										<PGVRSetVar name="source_exist" value="1"/>
									</PGVRRepeatTag>
								</PGVRif>
							</PGVRTextBox>
							<PGVRTextBox bgcolor="$factbox_bgcolor" border="1" width="$width2" newline="1">
								<PGVRif condition="$showplace==1">
									<PGVRText color="$tcolor" style="fact"><PGVRvar var="i18n::translate('Place')" />  </PGVRText>
								</PGVRif>
								<PGVRText color="$tcolor" style="text"><PGVRGedcomValue tag="DEAT:PLAC" /></PGVRText>
							</PGVRTextBox>

							<PGVRTextBox bgcolor="$factbox_bgcolor" border="1" left="15" width="$dwidth">
								<PGVRText color="$tcolor" style="fact"><PGVRvar var="i18n::translate('Burial')" />  </PGVRText>
								<PGVRText color="$tcolor" style="text"><PGVRGedcomValue tag="BURI:DATE" /> </PGVRText>
								<PGVRif condition="$sources==1">
									<PGVRRepeatTag tag="BURI:SOUR">
										<PGVRFootnote>
											<PGVRGedcom id="@SOUR">
												<PGVRGedcomValue tag="TITL" />
											</PGVRGedcom>
											<PGVRif condition="@PAGE!=''">: </PGVRif>
											<PGVRGedcomValue tag="SOUR:PAGE"/> <PGVRGedcomValue tag="SOUR:DATA:TEXT"/>
										</PGVRFootnote>
										<PGVRSetVar name="source_exist" value="1"/>
									</PGVRRepeatTag>
								</PGVRif>
							</PGVRTextBox>
							<PGVRTextBox bgcolor="$factbox_bgcolor" border="1" width="$width2" newline="1">
								<PGVRif condition="$showplace==1">
									<PGVRText color="$tcolor" style="fact"><PGVRvar var="i18n::translate('Place')" />  </PGVRText>
								</PGVRif>
								<PGVRText color="$tcolor" style="text"><PGVRGedcomValue tag="BURI:PLAC" /></PGVRText>
							</PGVRTextBox>
						</PGVRif>

						<!-- set the $spid variable so that we know who this person is and can print the correct spouse later -->
						<PGVRSetVar name="spid" value="@ID" />
						<PGVRRepeatTag tag="FAMS">
							<!-- get this child's family as spouse -->
							<PGVRGedcom id="@FAMS">
								<PGVRif condition="$spid==@HUSB">
									<PGVRTextBox bgcolor="$femalebox_bgcolor" border="1" left="15" width="$width1" newline="1">
										<PGVRText color="$tcolor" style="fact"><PGVRvar var="i18n::translate('Wife')" />  </PGVRText>
										<PGVRText color="$tcolor" style="name"><PGVRGetPersonName id="@WIFE" /></PGVRText>
										<PGVRGedcom id="@WIFE">
											<PGVRText color="$tcolor" style="text"> (<PGVRvarLetter var="i18n::translate('Birth')" />: <PGVRGedcomValue tag="BIRT:DATE" /> - <PGVRvarLetter var="i18n::translate('Death')" />: <PGVRGedcomValue tag="DEAT:DATE" />)</PGVRText>
										</PGVRGedcom>
									</PGVRTextBox>
								</PGVRif>
								<PGVRif condition="$spid==@WIFE">
									<PGVRTextBox bgcolor="$malebox_bgcolor" border="1" left="15" width="$width1" newline="1">
										<PGVRText color="$tcolor" style="fact"><PGVRvar var="i18n::translate('Husband')" />  </PGVRText>
										<PGVRText color="$tcolor" style="name"><PGVRGetPersonName id="@HUSB" /></PGVRText>
										<PGVRGedcom id="@HUSB">
											<PGVRText color="$tcolor" style="text"> (<PGVRvarLetter var="i18n::translate('Birth')" />: <PGVRGedcomValue tag="BIRT:DATE" /> - <PGVRvarLetter var="i18n::translate('Death')" />: <PGVRGedcomValue tag="DEAT:DATE" />)</PGVRText>
										</PGVRGedcom>
									</PGVRTextBox>
								</PGVRif>
							</PGVRGedcom>
						</PGVRRepeatTag>
						
						<!-- print any notes for the child -->
						<PGVRif condition="$notes==1">
							<PGVRRepeatTag tag="NOTE">
								<PGVRTextBox bgcolor="$factbox_bgcolor" border="1" left="15" width="$width1" newline="1">
									<PGVRText color="$tcolor" style="name"><PGVRvar var="i18n::translate('Note')" />  </PGVRText>
									<PGVRText color="$tcolor" style="text"><PGVRGedcomValue tag="NOTE" /></PGVRText>
								</PGVRTextBox>
							</PGVRRepeatTag>
						</PGVRif>
					</PGVRGedcom>
					<!-- end of child gedcom -->
					<PGVRTextBox height="$sheight" newline="1"/>
				</PGVRRepeatTag>
				<!-- end of children repeat -->
			</PGVRGedcom>
			<!-- end of main family gedcom -->

			<!-- if the sources were on, print the source citations as footnotes -->
			<PGVRif condition="($sources==1) and ($source_exist==1)">
				<PGVRTextBox newline="1" width="$width">
					<PGVRText style="pageheader"><br /><PGVRvar var="i18n::translate('Sources')" /><br /><br /></PGVRText>
					<PGVRFootnoteTexts />
				</PGVRTextBox>
			</PGVRif>
		</PGVRBody>
		<PGVRFooter>
			<PGVRCell align="rightrtl" newline="1" style="date"><PGVRNow /></PGVRCell>
		</PGVRFooter>
	</PGVRDoc>
</PGVReport>
