						</PGVRTextBox>
						<PGVRTextBox bgcolor="$factbox_bgcolor" border="1" width="$width2" newline="1">
							<PGVRif condition="$showplace==1">
								<PGVRText color="$tcolor" style="fact"><PGVRvar var="i18n::translate('Place')" />  </PGVRText>
							</PGVRif>
							<PGVRText color="$tcolor" style="text"><PGVRGedcomValue tag="DEAT:PLAC" /></PGVRText>
