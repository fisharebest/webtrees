<?xml version="1.0" encoding="UTF-8"?>
<PGVReport>
	<!-- $Id$ -->
	<PGVRTitle><PGVRvar var="i18n::translate('Family Group Report')" /></PGVRTitle>
	<PGVRDescription>Prints a PAF style family group record</PGVRDescription>
	<!-- User inputs for the report -->
	<PGVRInput name="famid" lookup="FAM" type="text" default=""><PGVRvar var="i18n::translate('Enter Family ID')" /></PGVRInput>
	<PGVRInput name="sources" type="checkbox" default="1"><PGVRvar var="i18n::translate('Show sources?')" /></PGVRInput>
	<PGVRInput name="notes" type="checkbox" default="1"><PGVRvar var="i18n::translate('Show notes?')" /></PGVRInput>
	<PGVRInput name="photos" type="checkbox" default="0"><PGVRvar var="i18n::translate('Show photos?')" /></PGVRInput>
	<PGVRInput name="blanks" type="checkbox" default="0"><PGVRvar var="i18n::translate('Print basic events when blank?')" /></PGVRInput>
	<PGVRInput name="pageSize" type="select" default="A4" options="letter,A3,A4,legal"><PGVRvar var="i18n::translate('Page size')" /></PGVRInput>
	<PGVRInput name="fonts" type="select" default="dejavusans" options="arialunicid0,dejavusans,helvetica"><PGVRvar var="i18n::translate('Font')"/></PGVRInput>
	<PGVRInput name="colors" type="checkbox" default="1"><PGVRvar var="i18n::translate('Use colors')"/></PGVRInput>
	<PGVRInput name="showplace" type="checkbox" default="1"><PGVRvar var="i18n::translate('Print')"/> "<PGVRvar var="i18n::translate('Place')" />"?</PGVRInput>

	<!-- Header -->
	<PGVRStyle name="header" font="$fonts" size="18" />
	<!-- Generated by style - required style name by the generator -->
	<PGVRStyle name="genby" font="$fonts" size="8" />
	<!-- Links to sources - required style name by the generator -->
	<PGVRStyle name="footnotenum" font="$fonts" size="6" />
	<!-- Source text - PGVRFootnoteTexts - required style name by the generator -->
	<PGVRStyle name="footnote" font="$fonts" size="8" />
	<!-- Page numbers text -->
	<PGVRStyle name="pagenum" font="$fonts" size="8" />
	<!-- Page Header text -->
	<PGVRStyle name="pageheader" font="$fonts" size="14"/>
	<!-- Individual names in text boxes -->
	<PGVRStyle name="name" font="$fonts" size="10" style="b"/>
	<!-- Standard text -->
	<PGVRStyle name="text" font="$fonts" size="9" />
	<!-- Facts text -->
	<PGVRStyle name="fact" font="$fonts" size="8"/>
	<!-- Date -->
	<PGVRStyle name="date" font="$fonts" size="8"/>

	<!-- if the option to show blanks is selected then ignore the MARR, BIRT etc facts that are printed with the blanks -->
	<PGVRif condition="$blanks==1">
		<PGVRSetVar name="ignore" value="CHAN,NAME,SEX,SOUR,NOTE,OBJE,FAMC,FAMS,TITL,CHIL,HUSB,WIFE,MARR,BIRT,CHR,DEAT,BURI,_UID,_PGV_OBJS" />
	</PGVRif>
	<PGVRif condition="$blanks!=1">
		<PGVRSetVar name="ignore" value="CHAN,NAME,SEX,SOUR,NOTE,OBJE,FAMC,FAMS,TITL,CHIL,HUSB,WIFE,_UID,_PGV_OBJS" />
	</PGVRif>
	<!-- Setup colors -->
	<!-- Section title background color -->
	<PGVRSetVar name="sectionbox_bgcolor" value="#AAAAAA"/>
	<PGVRSetVar name="malebox_bgcolor" value=""/>
	<PGVRSetVar name="femalebox_bgcolor" value=""/>
	<PGVRSetVar name="unknowngenderbox_bgcolor" value=""/>
	<PGVRSetVar name="factbox_bgcolor" value=""/>
	<PGVRSetVar name="tcolor" value=""/>
	<!-- Use colors -->
	<PGVRif condition="$colors==1">
		<!-- Section title background color -->
		<PGVRSetVar name="sectionbox_bgcolor" value="#9CA3D4"/>
		<!-- Male background color -->
		<PGVRSetVar name="malebox_bgcolor" value="#D6E0EA"/>
		<!-- Female background color -->
		<PGVRSetVar name="femalebox_bgcolor" value="#E9DAF1"/>
		<!-- Unknown gender -->
		<PGVRSetVar name="unknowngenderbox_bgcolor" value="#FFFFFF"/>
		<!-- Fact boxes -->
		<PGVRSetVar name="factbox_bgcolor" value="#D1D9FF"/>
		<!-- Text color - black -->
		<PGVRSetVar name="tcolor" value="#000000"/>
	</PGVRif>

	<!-- space height -->
	<PGVRSetVar name="sheight" value="15"/>

	<!-- set the default widths -->
	<PGVRSetVar name="width" value="0" />
	<PGVRSetVar name="width1" value="0" />
	<PGVRSetVar name="width2" value="0" />
	<PGVRSetVar name="dwidth" value="185" />
	<PGVRSetVar name="pwidth" value="436" />
	<!-- reset the widths if the photos are shown -->
	<PGVRif condition="$photos==1">
		<PGVRSetVar name="width" value="433" />
		<PGVRSetVar name="width1" value="418" />
		<PGVRSetVar name="width2" value="233" />
	</PGVRif>
	<!-- New Page for Sources controller if SOUR exist -->
	<PGVRSetVar name="source_exist" value="0"/>

	<!-- start of main report document -->
	<PGVRDoc pageSize="$pageSize">
		<PGVRSetVar name="husbid" value="@HUSB" />
		<PGVRSetVar name="wifeid" value="@WIFE" />

		<PGVRHeader>
			<PGVRCell align="center" newline="1" style="header"><PGVRvar var="i18n::translate('Family Group Report')" /></PGVRCell>
			<PGVRCell align="rightrtl" newline="1" style="pagenum"><PGVRvar var="i18n::translate('Page')" /> <PGVRPageNum /> <PGVRvar var="i18n::translate('of')" /> <PGVRTotalPages /></PGVRCell>
		</PGVRHeader>

		<PGVRBody>
			<PGVRGedcom id="$famid">
				<!-- Print the Family name with Level 1 sources -->
				<PGVRTextBox newline="1">
					<PGVRText style="pageheader"><PGVRvar var="i18n::translate('Family')" /> <PGVRGetPersonName id=""/> </PGVRText>
					<PGVRif condition="$sources==1">
						<PGVRRepeatTag tag="SOUR">
							<PGVRFootnote>
								<PGVRGedcom id="@SOUR">
									<PGVRGedcomValue tag="TITL" />
								</PGVRGedcom>
								<PGVRif condition="@PAGE!=''">: </PGVRif>
								<PGVRGedcomValue tag="SOUR:PAGE"/> <PGVRGedcomValue tag="SOUR:DATA:TEXT"/>
							</PGVRFootnote>
							<PGVRSetVar name="source_exist" value="1"/>
						</PGVRRepeatTag>
					</PGVRif>
				</PGVRTextBox>

				<!-- Show all family images -->
				<PGVRif condition="$photos==1">
					<!-- This is an image not a text, so don't use text padding
					Reset also the last height after all the images has been printed
					set pagecheck to 0, the image function check is too
					and "trick" the X-position back to the margin with a newline -->
					<PGVRTextBox left="$pwidth" newline="1" pagecheck="0" padding="0" reseth="1" width="80">
						<PGVRRepeatTag tag="OBJE">
							<PGVRImage file="@FILE" width="80" ln="N"/>
						</PGVRRepeatTag>
					</PGVRTextBox>
				</PGVRif>

				<!-- Print the husband -->
				<PGVRGedcom id="@HUSB">
					<!-- print the name and any level 1 sources -->
					<PGVRTextBox bgcolor="$malebox_bgcolor" border="1" width="$width" newline="1">
						<PGVRText color="$tcolor" style="text"><PGVRvar var="i18n::translate('Husband')" />  </PGVRText>
						<PGVRText color="$tcolor" style="name"><PGVRGetPersonName id="" /> </PGVRText>
						<PGVRif condition="$sources==1">
							<PGVRRepeatTag tag="SOUR">
								<PGVRFootnote>
									<PGVRGedcom id="@SOUR">
										<PGVRGedcomValue tag="TITL" />
									</PGVRGedcom>
									<PGVRif condition="@PAGE!=''">: </PGVRif>
									<PGVRGedcomValue tag="SOUR:PAGE"/> <PGVRGedcomValue tag="SOUR:DATA:TEXT"/>
								</PGVRFootnote>
								<PGVRSetVar name="source_exist" value="1"/>
							</PGVRRepeatTag>
						</PGVRif>
					</PGVRTextBox>

					<!-- print the birth and christening if the blanks are on -->
					<PGVRif condition="$blanks==1">
						<PGVRTextBox bgcolor="$factbox_bgcolor" border="1" left="15" width="$dwidth">
							<PGVRText color="$tcolor" style="fact"><PGVRvar var="i18n::translate('Birth')" />  </PGVRText>
							<PGVRText color="$tcolor" style="text"><PGVRGedcomValue tag="BIRT:DATE" /> </PGVRText>
							<PGVRif condition="$sources==1">
								<PGVRRepeatTag tag="BIRT:SOUR">
									<PGVRFootnote>
										<PGVRGedcom id="@SOUR">
											<PGVRGedcomValue tag="TITL" />
										</PGVRGedcom>
										<PGVRif condition="@PAGE!=''">: </PGVRif>
										<PGVRGedcomValue tag="SOUR:PAGE"/> <PGVRGedcomValue tag="SOUR:DATA:TEXT"/>
									</PGVRFootnote>
									<PGVRSetVar name="source_exist" value="1"/>
								</PGVRRepeatTag>
							</PGVRif>
						</PGVRTextBox>
						<PGVRTextBox bgcolor="$factbox_bgcolor" border="1" width="$width2" newline="1">
							<PGVRif condition="$showplace==1">
								<PGVRText color="$tcolor" style="fact"><PGVRvar var="i18n::translate('Place')" />  </PGVRText>
							</PGVRif>
							<PGVRText color="$tcolor" style="text"><PGVRGedcomValue tag="BIRT:PLAC" /></PGVRText>
						</PGVRTextBox>

						<PGVRTextBox bgcolor="$factbox_bgcolor" border="1" left="15" width="$dwidth">
							<PGVRText color="$tcolor" style="fact"><PGVRvar var="i18n::translate('Christening')" />  </PGVRText>
							<PGVRText color="$tcolor" style="text"><PGVRGedcomValue tag="CHR:DATE" /> </PGVRText>
							<PGVRif condition="$sources==1">
								<PGVRRepeatTag tag="CHR:SOUR">
									<PGVRFootnote>
										<PGVRGedcom id="@SOUR">
											<PGVRGedcomValue tag="TITL" />
										</PGVRGedcom>
										<PGVRif condition="@PAGE!=''">: </PGVRif>
										<PGVRGedcomValue tag="SOUR:PAGE"/> <PGVRGedcomValue tag="SOUR:DATA:TEXT"/>
									</PGVRFootnote>
									<PGVRSetVar name="source_exist" value="1"/>
								</PGVRRepeatTag>
							</PGVRif>
						</PGVRTextBox>
						<PGVRTextBox bgcolor="$factbox_bgcolor" border="1" width="$width2" newline="1">
							<PGVRif condition="$showplace==1">
								<PGVRText color="$tcolor" style="fact"><PGVRvar var="i18n::translate('Place')" />  </PGVRText>
							</PGVRif>
							<PGVRText color="$tcolor" style="text"><PGVRGedcomValue tag="CHR:PLAC" /></PGVRText>
						</PGVRTextBox>
					</PGVRif>

					<!-- print all of the other facts -->
					<PGVRFacts ignore="$ignore">
						<PGVRTextBox bgcolor="$factbox_bgcolor" border="1" left="15" width="$dwidth">
							<PGVRText color="$tcolor" style="fact"><PGVRvar var="i18n::translate('@fact')" />  </PGVRText>
							<PGVRText color="$tcolor" style="text"><PGVRGedcomValue tag="@fact:DATE" /> </PGVRText>
							<PGVRif condition="$sources==1">
								<PGVRRepeatTag tag="@fact:SOUR">
									<PGVRFootnote>
										<PGVRGedcom id="@SOUR">
											<PGVRGedcomValue tag="TITL" />
										</PGVRGedcom>
										<PGVRif condition="@PAGE!=''">: </PGVRif>
										<PGVRGedcomValue tag="SOUR:PAGE"/> <PGVRGedcomValue tag="SOUR:DATA:TEXT"/>
									</PGVRFootnote>
									<PGVRSetVar name="source_exist" value="1"/>
								</PGVRRepeatTag>
							</PGVRif>
						</PGVRTextBox>
						<PGVRif condition="@desc!=''">
							<PGVRTextBox bgcolor="$factbox_bgcolor" border="1" width="$width2" newline="1">
								<PGVRText color="$tcolor" style="text">
									<PGVRGedcomValue tag="@desc" /> <PGVRGedcomValue tag="@fact:PLAC" /> <PGVRGedcomValue tag="@fact:TEMP" />
								</PGVRText>
							</PGVRTextBox>
						</PGVRif>
						<PGVRif condition="@desc==''">
							<PGVRTextBox bgcolor="$factbox_bgcolor" border="1" width="$width2" newline="1">
								<PGVRif condition="$showplace==1">
									<PGVRText color="$tcolor" style="fact"><PGVRvar var="i18n::translate('Place')" />  </PGVRText>
								</PGVRif>
								<PGVRText color="$tcolor" style="text">
									<PGVRGedcomValue tag="@fact:PLAC" /> <PGVRGedcomValue tag="@fact:TEMP" />
								</PGVRText>
							</PGVRTextBox>
						</PGVRif>
					</PGVRFacts>
					
					<!-- put the death and burial info if blanks are on -->
					<PGVRif condition="$blanks==1">
						<PGVRTextBox bgcolor="$factbox_bgcolor" border="1" left="15" width="$dwidth">
							<PGVRText color="$tcolor" style="fact"><PGVRvar var="i18n::translate('Death')" />  </PGVRText>
							<PGVRText color="$tcolor" style="text"><PGVRGedcomValue tag="DEAT:DATE" /> </PGVRText>
							<PGVRif condition="$sources==1">
								<PGVRRepeatTag tag="DEAT:SOUR">
									<PGVRFootnote>
										<PGVRGedcom id="@SOUR">
											<PGVRGedcomValue tag="TITL" />
										</PGVRGedcom>
										<PGVRif condition="@PAGE!=''">: </PGVRif>
										<PGVRGedcomValue tag="SOUR:PAGE"/> <PGVRGedcomValue tag="SOUR:DATA:TEXT"/>
									</PGVRFootnote>
									<PGVRSetVar name="source_exist" value="1"/>
								</PGVRRepeatTag>
							</PGVRif>
						</PGVRTextBox>
						<PGVRTextBox bgcolor="$factbox_bgcolor" border="1" width="$width2" newline="1">
							<PGVRif condition="$showplace==1">
								<PGVRText color="$tcolor" style="fact"><PGVRvar var="i18n::translate('Place')" />  </PGVRText>
							</PGVRif>
							<PGVRText color="$tcolor" style="text"><PGVRGedcomValue tag="DEAT:PLAC" /></PGVRText>
						</PGVRTextBox>

						<PGVRTextBox bgcolor="$factbox_bgcolor" border="1" left="15" width="$dwidth">
							<PGVRText color="$tcolor" style="fact"><PGVRvar var="i18n::translate('Burial')" />  </PGVRText>
							<PGVRText color="$tcolor" style="text"><PGVRGedcomValue tag="BURI:DATE" /> </PGVRText>
							<PGVRif condition="$sources==1">
								<PGVRRepeatTag tag="BURI:SOUR">
									<PGVRFootnote>
										<PGVRGedcom id="@SOUR">
											<PGVRGedcomValue tag="TITL" />
										</PGVRGedcom>
										<PGVRif condition="@PAGE!=''">: </PGVRif>
										<PGVRGedcomValue tag="SOUR:PAGE"/> <PGVRGedcomValue tag="SOUR:DATA:TEXT"/>
									</PGVRFootnote>
									<PGVRSetVar name="source_exist" value="1"/>
								</PGVRRepeatTag>
							</PGVRif>
						</PGVRTextBox>
						<PGVRTextBox bgcolor="$factbox_bgcolor" border="1" width="$width2" newline="1">
							<PGVRif condition="$showplace==1">
								<PGVRText color="$tcolor" style="fact"><PGVRvar var="i18n::translate('Place')" />  </PGVRText>
							</PGVRif>
							<PGVRText color="$tcolor" style="text"><PGVRGedcomValue tag="BURI:PLAC" /></PGVRText>
						</PGVRTextBox>
					</PGVRif>

					<PGVRGedcom id="$famid">
						<!-- put the marriage info if blanks are on -->
						<PGVRif condition="$blanks==1">
							<PGVRTextBox bgcolor="$factbox_bgcolor" border="1" left="15" width="$dwidth">
								<PGVRText color="$tcolor" style="fact"><PGVRvar var="i18n::translate('Marriage')" />  </PGVRText>
								<PGVRText color="$tcolor" style="text"><PGVRGedcomValue tag="MARR:DATE" /> </PGVRText>
								<PGVRif condition="$sources==1">
									<PGVRRepeatTag tag="MARR:SOUR">
										<PGVRFootnote>
											<PGVRGedcom id="@SOUR">
												<PGVRGedcomValue tag="TITL" />
											</PGVRGedcom>
											<PGVRif condition="@PAGE!=''">: </PGVRif>
											<PGVRGedcomValue tag="SOUR:PAGE"/> <PGVRGedcomValue tag="SOUR:DATA:TEXT"/>
										</PGVRFootnote>
										<PGVRSetVar name="source_exist" value="1"/>
									</PGVRRepeatTag>
								</PGVRif>
							</PGVRTextBox>
							<PGVRTextBox bgcolor="$factbox_bgcolor" border="1" width="$width2" newline="1">
								<PGVRif condition="$showplace==1">
									<PGVRText color="$tcolor" style="fact"><PGVRvar var="i18n::translate('Place')" />  </PGVRText>
								</PGVRif>
								<PGVRText color="$tcolor" style="text"><PGVRGedcomValue tag="MARR:PLAC" /></PGVRText>
							</PGVRTextBox>
						</PGVRif>

						<!-- print all of the other family facts -->
						<PGVRFacts ignore="$ignore">
							<PGVRTextBox bgcolor="$factbox_bgcolor" border="1" left="15" width="$dwidth">
								<PGVRText color="$tcolor" style="fact"><PGVRvar var="i18n::translate('@fact')" />  </PGVRText>
								<PGVRText color="$tcolor" style="text"><PGVRGedcomValue tag="@fact:DATE" /> </PGVRText>
								<PGVRif condition="$sources==1">
									<PGVRRepeatTag tag="@fact:SOUR">
										<PGVRFootnote>
											<PGVRGedcom id="@SOUR">
												<PGVRGedcomValue tag="TITL" />
											</PGVRGedcom>
											<PGVRif condition="@PAGE!=''">: </PGVRif>
											<PGVRGedcomValue tag="SOUR:PAGE"/> <PGVRGedcomValue tag="SOUR:DATA:TEXT"/>
										</PGVRFootnote>
										<PGVRSetVar name="source_exist" value="1"/>
									</PGVRRepeatTag>
								</PGVRif>
							</PGVRTextBox>
							<PGVRif condition="@desc!=''">
								<PGVRTextBox bgcolor="$factbox_bgcolor" border="1" width="$width2" newline="1">
									<PGVRText color="$tcolor" style="text">
										<PGVRGedcomValue tag="@desc" /> <PGVRGedcomValue tag="@fact:PLAC" /> <PGVRGedcomValue tag="@fact:TEMP" />
									</PGVRText>
								</PGVRTextBox>
							</PGVRif>
							<PGVRif condition="@desc==''">
								<PGVRTextBox bgcolor="$factbox_bgcolor" border="1" width="$width2" newline="1">
									<PGVRif condition="$showplace==1">
										<PGVRText color="$tcolor" style="fact"><PGVRvar var="i18n::translate('Place')" />  </PGVRText>
									</PGVRif>
									<PGVRText color="$tcolor" style="text">
										<PGVRGedcomValue tag="@fact:PLAC" /> <PGVRGedcomValue tag="@fact:TEMP" />
									</PGVRText>
								</PGVRTextBox>
							</PGVRif>
						</PGVRFacts>
					</PGVRGedcom>

					<!-- print the father and mother of the main husband -->
					<PGVRGedcom id="@FAMC">
						<PGVRTextBox bgcolor="$malebox_bgcolor" border="1" left="15" width="$width1" newline="1">
							<PGVRText color="$tcolor" style="fact"><PGVRvar var="i18n::translate('Father')" />  </PGVRText>
							<PGVRText color="$tcolor" style="name"><PGVRGetPersonName id="@HUSB" /></PGVRText>
							<PGVRGedcom id="@HUSB">
								<PGVRText color="$tcolor" style="text"> (<PGVRvarLetter var="i18n::translate('Birth')" />: <PGVRGedcomValue tag="BIRT:DATE" /> - <PGVRvarLetter var="i18n::translate('Death')" />: <PGVRGedcomValue tag="DEAT:DATE" />)</PGVRText>
							</PGVRGedcom>
						</PGVRTextBox>
						<PGVRTextBox bgcolor="$femalebox_bgcolor" border="1" left="15" width="$width1" newline="1">
							<PGVRText color="$tcolor" style="fact"><PGVRvar var="i18n::translate('Mother')" />  </PGVRText>
							<PGVRText color="$tcolor" style="name"><PGVRGetPersonName id="@WIFE" /></PGVRText>
							<PGVRGedcom id="@WIFE">
								<PGVRText color="$tcolor" style="text"> (<PGVRvarLetter var="i18n::translate('Birth')" />: <PGVRGedcomValue tag="BIRT:DATE" /> - <PGVRvarLetter var="i18n::translate('Death')" />: <PGVRGedcomValue tag="DEAT:DATE" />)</PGVRText>
							</PGVRGedcom>
						</PGVRTextBox>
					</PGVRGedcom>
					<!-- print any notes for the husband -->
					<PGVRif condition="$notes==1">
						<PGVRRepeatTag tag="NOTE">
							<PGVRTextBox bgcolor="$factbox_bgcolor" border="1" left="15" width="$width1" newline="1">
								<PGVRText color="$tcolor" style="name"><PGVRvar var="i18n::translate('Note')" />  </PGVRText>
								<PGVRText color="$tcolor" style="text"><PGVRGedcomValue tag="NOTE" /></PGVRText>
							</PGVRTextBox>
						</PGVRRepeatTag>
					</PGVRif>
					<PGVRTextBox height="$sheight" newline="1"/>
				</PGVRGedcom>
				<!-- end of main husband -->

				<!-- Print the wife -->
				<PGVRGedcom id="@WIFE">
					<!-- print the name and sources -->
					<PGVRTextBox bgcolor="$femalebox_bgcolor" border="1" width="$width" newline="1">
						<PGVRText color="$tcolor" style="text"><PGVRvar var="i18n::translate('Wife')" />  </PGVRText>
						<PGVRText color="$tcolor" style="name"><PGVRGetPersonName id="" /> </PGVRText>
						<PGVRif condition="$sources==1">
							<PGVRRepeatTag tag="SOUR">
								<PGVRFootnote>
									<PGVRGedcom id="@SOUR">
										<PGVRGedcomValue tag="TITL" />
									</PGVRGedcom>
									<PGVRif condition="@PAGE!=''">: </PGVRif>
									<PGVRGedcomValue tag="SOUR:PAGE"/> <PGVRGedcomValue tag="SOUR:DATA:TEXT"/>
								</PGVRFootnote>
								<PGVRSetVar name="source_exist" value="1"/>
							</PGVRRepeatTag>
						</PGVRif>
					</PGVRTextBox>

					<!-- print the birth and christening with blanks on -->
					<PGVRif condition="$blanks==1">
						<PGVRTextBox bgcolor="$factbox_bgcolor" border="1" left="15" width="$dwidth">
							<PGVRText color="$tcolor" style="fact"><PGVRvar var="i18n::translate('Birth')" />  </PGVRText>
							<PGVRText color="$tcolor" style="text"><PGVRGedcomValue tag="BIRT:DATE" /> </PGVRText>
							<PGVRif condition="$sources==1">
								<PGVRRepeatTag tag="BIRT:SOUR">
									<PGVRFootnote>
										<PGVRGedcom id="@SOUR">
											<PGVRGedcomValue tag="TITL" />
										</PGVRGedcom>
										<PGVRif condition="@PAGE!=''">: </PGVRif>
										<PGVRGedcomValue tag="SOUR:PAGE"/> <PGVRGedcomValue tag="SOUR:DATA:TEXT"/>
									</PGVRFootnote>
									<PGVRSetVar name="source_exist" value="1"/>
								</PGVRRepeatTag>
							</PGVRif>
						</PGVRTextBox>
						<PGVRTextBox bgcolor="$factbox_bgcolor" border="1" width="$width2" newline="1">
							<PGVRif condition="$showplace==1">
								<PGVRText color="$tcolor" style="fact"><PGVRvar var="i18n::translate('Place')" />  </PGVRText>
							</PGVRif>
							<PGVRText color="$tcolor" style="text"><PGVRGedcomValue tag="BIRT:PLAC" /></PGVRText>
						</PGVRTextBox>

						<PGVRTextBox bgcolor="$factbox_bgcolor" border="1" left="15" width="$dwidth">
							<PGVRText color="$tcolor" style="fact"><PGVRvar var="i18n::translate('Christening')" />  </PGVRText>
							<PGVRText color="$tcolor" style="text"><PGVRGedcomValue tag="CHR:DATE" /> </PGVRText>
							<PGVRif condition="$sources==1">
								<PGVRRepeatTag tag="CHR:SOUR">
									<PGVRFootnote>
										<PGVRGedcom id="@SOUR">
											<PGVRGedcomValue tag="TITL" />
										</PGVRGedcom>
										<PGVRif condition="@PAGE!=''">: </PGVRif>
										<PGVRGedcomValue tag="SOUR:PAGE"/> <PGVRGedcomValue tag="SOUR:DATA:TEXT"/>
									</PGVRFootnote>
									<PGVRSetVar name="source_exist" value="1"/>
								</PGVRRepeatTag>
							</PGVRif>
