		<Header>
			<Cell align="center" height="30" newline="1" style="header"><var var="WT_I18N::translate('Descendants of ')" /><GetPersonName id="$pid" /></Cell>
			<Cell align="rightrtl" newline="1" style="pagenum"><var var="WT_I18N::translate('Page')" /> <PageNum /> <var var="WT_I18N::translate('of')" /> <TotalPages /></Cell>
		</Header>
