<?php

use Fisharebest\Webtrees\I18N;
use Illuminate\Support\Collection;

/**
 * @var bool                 $show_user
 * @var Collection<stdClass> $rows
 */

?>

<?php foreach ($rows as $row) : ?>
    <a href="<?= e($row->record->url()) ?>" class="list_item name2">
        <?= $row->record->fullName() ?>
    </a>

    <div class="indent mb-1">
        <?php if ($row->record->lastChangeTimestamp()->unix() !== 0) : ?>
            <?php if ($show_user) : ?>
                <?= /* I18N: [a record was] Changed on <date/time> by <user> */I18N::translate('Changed on %1$s by %2$s', view('components/datetime', ['timestamp' => $row->record->lastChangeTimestamp()]), e($row->record->lastChangeUser())) ?>
            <?php else : ?>
                <?= /* I18N: [a record was] Changed on <date/time> */ I18N::translate('Changed on %1$s', view('components/datetime', ['timestamp' => $row->record->lastChangeTimestamp()])) ?>
            <?php endif ?>
        <?php endif ?>
    </div>
<?php endforeach ?>
