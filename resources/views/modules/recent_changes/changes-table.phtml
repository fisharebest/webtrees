?>

<div class="table-responsive">
    <table
        class="table table-sm wt-table-changes datatables d-none"
        <?= view('lists/datatables-attributes') ?>
        data-filter="false"
        data-info="false"
        data-paging="false"
    >
        <thead>
            <tr>
                <th class="wt-side-block-optional">
                <span class="sr-only">
                    <?= I18N::translate('Type') ?>
                </span>
                </th>
                <th>
                    <?= I18N::translate('Record') ?>
                </th>
                <th>
                    <?= I18N::translate('Last change') ?>
                </th>
                <?php if ($show_user) : ?>
                    <th>
                        <?= I18N::translate('User') ?>
                    </th>
                <?php endif ?>
            </tr>
        </thead>
        <tbody>
            <?php foreach ($rows as $row) : ?>
                <tr>
                    <td data-sort="<?= $row->record::RECORD_TYPE ?>" class="text-centre wt-side-block-optional">
                        <?php if ($row->record::RECORD_TYPE === Individual::RECORD_TYPE) : ?>
                            <?= view('icons/individual') ?>
                            <span class="sr-only"><?= I18N::translate('Individual') ?></span>
                        <?php elseif ($row->record::RECORD_TYPE === Family::RECORD_TYPE) : ?>
                            <?= view('icons/family') ?>
                            <span class="sr-only"><?= I18N::translate('Family') ?></span>
                        <?php elseif ($row->record::RECORD_TYPE === Media::RECORD_TYPE) : ?>
                            <?= view('icons/media') ?>
                            <span class="sr-only"><?= I18N::translate('Media') ?></span>
                        <?php elseif ($row->record::RECORD_TYPE === Note::RECORD_TYPE) : ?>
                            <?= view('icons/note') ?>
                            <span class="sr-only"><?= I18N::translate('Note') ?></span>
                        <?php elseif ($row->record::RECORD_TYPE === Source::RECORD_TYPE) : ?>
                            <?= view('icons/source') ?>
                            <span class="sr-only"><?= I18N::translate('Source') ?></span>
                        <?php elseif ($row->record::RECORD_TYPE === Submitter::RECORD_TYPE) : ?>
                            <?= view('icons/submitter') ?>
                            <span class="sr-only"><?= I18N::translate('Submitter') ?></span>
                        <?php elseif ($row->record::RECORD_TYPE === Repository::RECORD_TYPE) : ?>
                            <?= view('icons/repository') ?>
                            <span class="sr-only"><?= I18N::translate('Repository') ?></span>
                        <?php endif ?>
                    </td>

                    <td data-sort="<?= e($row->record->sortName()) ?>">
                        <a href="<?= e($row->record->url()) ?>"><?= $row->record->fullName() ?></a>
                    </td>

                    <td data-sort="<?= $row->time->timestamp ?>">
                        <?= view('components/datetime', ['timestamp' => $row->time]) ?>
                    </td>

                    <?php if ($show_user) : ?>
                        <td>
                            <?= e($row->user->userName()) ?>
                        </td>
                    <?php endif ?>
                </tr>
            <?php endforeach ?>
        </tbody>
    </table>
</div>

