<?php

declare(strict_types=1);

use Fisharebest\Webtrees\I18N;

/**
 * @var string       $chart_title
 * @var array<mixed> $chart_colors
 * @var array<array> $data
 * @var string       $language
 * @var string       $region
 */

$id   = 'google-chart-' . bin2hex(random_bytes(8));
$name = 'callback_' . bin2hex(random_bytes(12));
?>

<?php if (count($data) === 1) : ?>
    <?= I18N::translate('This information is not available.') ?>
<?php else : ?>
    <div class="d-grid mb-3">
        <div class="card">
            <div class="card-header">
                <?= $chart_title ?>
            </div>
            <div class="card-body">
                <div id="<?= $id ?>" title="<?= $chart_title ?>"></div>
            </div>
        </div>
    </div>
    <script>

    let <?= $name ?> = function () {
        let chartColors = webtrees.colors.fromCss(<?= json_encode($chart_colors) ?>);
        
        statistics.drawGeoChart(
            <?= json_encode($id) ?>,
            <?= json_encode($data) ?>,
            {
                title: <?= json_encode($chart_title) ?>,
                region: <?= json_encode($region) ?>,
                colorAxis: {
                    colors: chartColors
                }
            }
        );
    };

    if (document.readyState === "complete"
        || (document.readyState !== "loading" && !document.documentElement.doScroll)
    ) {
        statistics.init(<?= json_encode($language) ?>);
        statistics.addCallback(<?= $name ?>);
    } else {
        document.addEventListener("DOMContentLoaded", function () {
            statistics.init(<?= json_encode($language) ?>);
            statistics.addCallback(<?= $name ?>);
        });
    }

    </script>
<?php endif; ?>
