<?php

declare(strict_types=1);

use Fisharebest\Webtrees\Timestamp;
use Fisharebest\Webtrees\I18N;

/**
 * @var Timestamp $timestamp
 */
?>

<?php if ($timestamp->timestamp() === 0) : ?>
    <span class="wt-timestamp">
        <?= I18N::translate('Never') ?>
    </span>
<?php else : ?>
    <span class="wt-timestamp" title="<?= e($timestamp->diffForHumans()) ?>" dir="auto">
        <?= e($timestamp->isoFormat('LLLL')) ?>
    </span>
<?php endif ?>
